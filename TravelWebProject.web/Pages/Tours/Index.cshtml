                @Html.DisplayFor(modelItem => item.Destinate.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transport.TransportationModeId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TourId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TourId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TourId">Delete</a>
